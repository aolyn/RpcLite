        <Button x:Name="btnSetVersion" Content="Set Version" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="153,103,0,0" Click="btnSetVersion_Click"/>
        <Button x:Name="btnPublish" Content="Publish" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="177,147,0,0" Click="btnPublish_Click"/>
        <Button x:Name="btnRead" Content="Read" HorizontalAlignment="Left" Margin="56,103,0,0" VerticalAlignment="Top" Width="75" Click="btnRead_Click"/>
        <Button x:Name="btnCopyToLocalIIS" Content="Copy To Local IIS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Margin="56,147,0,0" Click="btnCopyToLocalIIS_Click"/>
        <Button x:Name="btnBuild" Content="Build" HorizontalAlignment="Left" Margin="254,103,0,0" VerticalAlignment="Top" Width="75" Click="btnBuild_Click"/>

    </Grid>
</Window>
